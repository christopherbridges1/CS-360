<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- Sms notification text -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sms_permission_prompt"
        android:textColor="@color/colorText"
        android:textSize="16sp"
        android:textAlignment="center"
        android:layout_marginBottom="32dp" />

    <!-- Sms notification button ALLOW -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonAllowSms"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/allow_sms"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/colorPrimary" />

    <!-- Sms notification button DENY -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonDenySms"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deny_sms"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/buttonDelete"
        android:layout_marginTop="16dp" />

</LinearLayout>
