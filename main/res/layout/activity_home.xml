<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

  <LinearLayout
      android:id="@+id/main"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="20dp">

    <!-- Goal weight text -->
    <TextView
        android:id="@+id/textGoalWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/goal_weight"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:padding="8dp" />

    <!-- Current weight text -->
    <TextView
        android:id="@+id/textCurrentWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/current_weight"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:padding="8dp" />

    <!-- Weekly progress text -->
    <TextView
        android:id="@+id/textWeeklyProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/weekly_progress"
        android:textColor="@color/colorText"
        android:textSize="18sp"
        android:padding="8dp" />

    <!-- Log daily weight button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLogWeight"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_weight"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="16dp" />

    <!-- Set goal weight button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonSetGoal"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/set_goal"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/colorPrimary"
        android:layout_marginTop="8dp" />

    <!-- View weight history button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonHistory"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/view_history"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        app:backgroundTint="@color/colorAccent"
        android:layout_marginTop="8dp" />

  </LinearLayout>
</ScrollView>
